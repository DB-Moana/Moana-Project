<html lang="en">
<head>
	<meta charset = "UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
</head>
<body>
<nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <ul class="nav navbar-nav">
          <li><a class="navbar-brand" onclick="location.href='http://localhost:3000'">Home</a></li>
          </ul>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><a onclick="location.href='http://localhost:3000/about'">About</a></li>
            <li  class="active"><a onclick="location.href='http://localhost:3000/search'">Search</a></li>  
            <li><a onclick="location.href='http://localhost:3000/contact'">Contact</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
 </nav>
<div class="container" style="text-align:center">
	<div class = "text-center" class= "text-capitalize">
		<br>
		<br>
		<br>
		<h1>The Olympics For Everyone</h1>
	</div>
	<br>
	 <form class="form-inline" action="/search-result" method="POST">
      <div class="form-group">
      <div class="center">
      <div>
        <input type="text" class="form-control" name="player" placeholder="Player"></input>
        <input data-format="yyyy-MM-dd" type="text" class="form-control" name="date" placeholder="Date"></input>
        <span class="add-on">
      <i data-time-icon="icon-time" data-date-icon="icon-calendar">
      </i>
    </span>
        <input type="text" class="form-control" name="county" placeholder="Country"></input>
        <input type="text" class="form-control" name="sports" placeholder="Sports"></input>
        <button type="submit" class="btn btn-danger">Search</button>
      </div>
      </div>
    </div>
     </form>
     <br><br>
			<table class="table table-striped table-bordered">	
                  <thead>
                    <tr>
                        <th>Player</th>
                        <th>Date</th>
                        <th>Country</th>
                        <th>Sports</th>
                    </tr>
                    </thead>
                    
				<div class="ui blue fluid card">
					 <div class="content">			    		
						<div class="ui very relaxed selection celled list">
							<%     for (var i = 0; i < info.length; i++) {
								   var curPlayer = info[i].P_Name;
                                   var curDate = info[i].Phone_Num;
                                   var curCountry = info[i].Country;
								   var curSports = info[i].Sport;
                                   %>
                                   <tbody>
								    <div class="item">
										<div class="ui grid">
						    				<div class="fourteen wide column">
						    					<div class="ui header">
                                                    <td id = "player">
										    			<%=curPlayer %>
                                                    </td>
										    		<td id = "date" >
										    			<%=curDate %>
                                                    </td>
                                                    <td id = "country">
										    			<%=curCountry %>
                                                    </td>
                                                    <td id = "sports">
										    			<%=curSports %>
										    		</td>
		
												</div>
						    				</div>
						    			</div>
                                    </div>
                                </tbody>
							<% } %>	
                        </div>
                      </div>
                        </div>
                </table>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
<script type="text/javascript" src = "js/bootstrap.js"></script>
</body>
</html>
